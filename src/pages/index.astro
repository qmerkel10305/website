		<section id="leadership">
			<h1>Activities & Leadership</h1>
			<ul>
				<li>Aerial Robotics Club</li>
					<ul>
						<li>Software Subteam Lead, Aerial Robotics Club</li>
						<li>Webmaster, Aerial Robotics Club</li>
					</ul>
				<li>Eagle Scout</li>
			</ul>
		</section>
	</main>
</Layout>

